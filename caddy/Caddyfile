{
    admin 0.0.0.0:2019
    # Global logging
    log {
        output stdout
        format json
    }
    # Optional: email for ACME
    # email admin@example.com
}

# Import per-site configs generated by the app (if any)
import sites/*.caddy

# Default fallback (useful for local/dev without site files)
:80 {
    @static path /static/*
    handle @static {
        root * /srv/static
        file_server
    }

    @media path /media/*
    handle @media {
        root * /srv/media
        file_server
    }

    handle {
        reverse_proxy app:8000
    }
}

